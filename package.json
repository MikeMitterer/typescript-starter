{
  "name": "@mike.mitterer/typescript-starter",
  "author": "Mike Mitterer",
  "version": "0.1.1",
  "description": "This is a starter project for typescript projects",
  "license": "MIT",

  "main": "dist/js/index.js",
  "types": "dist/types/main/ts/index.d.ts",

  "scripts": {
    "start": "NODE_ENV=development webpack-dev-server --mode development",
    "build": "NODE_ENV=development webpack --mode development",
    "build:prod": "NODE_ENV=production webpack --mode production",
    "test": "jest",
    "deploy:ts" : "npm run build:prod && tsc && rm -rf dist/types/test",
    "deploy": "npm run deploy:ts && publish-please",
    "prepublishOnly": "publish-please guard"
  },
  "files" : [
    "dist/",
    "types/",
    "src/main/ts/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MikeMitterer/typescript-training"
  },
  "typings": "index.d.ts",

  "dependencies": {
    "typescript-logging": "^0.6.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^7.10.2",
    "autoprefixer": "^9.3.1",
    "awesome-typescript-loader": "^5.2.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^0.28.11",
    "file-loader": "^2.0.0",
    "html-beautify-webpack-plugin": "^1.0.5",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-string-replace-plugin": "^1.1.0",
    "image-webpack-loader": "^4.5.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.10.0",
    "postcss": "^7.0.6",
    "postcss-loader": "^3.0.0",
    "publish-please": "^5.3.0",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "ts-jest": "^23.10.4",
    "ts-loader": "^4.5.0",
    "ts-node": "^3.0.4",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.1.6",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-livereload-plugin": "^2.1.1"
  }
}
