{
    "extends": ["tslint:recommended", "tslint-consistent-codestyle"],

    "defaultSeverity": "error",

    "rules": {
        // "no-console": false
        "no-trailing-whitespace": { "severity": "off" },

        "one-line": [true, "check-catch", "check-finally", "check-open-brace", "check-whitespace"],

        "quotemark": false,

        "semicolon":false,

        "trailing-comma": [true, { "esSpecCompliant": true }],

        "indent": [true, "spaces", 4],
        "interface-name": false,
        "object-literal-sort-keys": false,
        "no-any": true,
        "no-consecutive-blank-lines": false,
        "max-classes-per-file": false,

        "class-name": false,
        "no-null-keyword": true,
        "no-unused-expression": [true, "allow-new"],

        "variable-name": [
            true, "ban-keywords", "check-format",
            "allow-leading-underscore", "allow-pascal-case"
        ],

        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "private-static-field",
                    "private-instance-field",
                    "public-instance-field",
                    "public-constructor",
                    "private-constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],

        // arrow-call-signature seit 27.1.2020 entfernt da sich das Ganze nicht feiner
        // einstellen l√§sst und seit einem Versions-Update bei den Test warnings angezeigt werden
        "typedef": [true, "call-signature", /* "arrow-call-signature",*/ "property-declaration"]
    }
}
