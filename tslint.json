{
    "extends": ["tslint:recommended"],

    "defaultSeverity": "error",

    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },

    "rules": {
        "no-trailing-whitespace": {  "severity": "off"  },

        "one-line": [true, "check-catch", "check-finally", "check-open-brace", "check-whitespace"],

        // Rule: https://palantir.github.io/tslint/rules/whitespace/
        "whitespace": [
            true,
            // "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            // "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
            // "check-postbrace"
        ],

        "quotemark": [true, "single"],
        
        "indent": [true, "spaces", 4],

        "interface-name": false,

        "object-literal-sort-keys": false,

        "no-any": true,

        "no-consecutive-blank-lines": false,

        "max-classes-per-file": false,

        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "private-static-field",
                    "private-instance-field",
                    "public-instance-field",
                    "public-constructor",
                    "private-constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],

        "semicolon": [true, "never"],

        "trailing-comma": [true, { "esSpecCompliant": true }],

        "typedef": [true, "call-signature", "property-declaration"],

        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"]
    }
}
