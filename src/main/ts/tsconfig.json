{
    "compilerOptions": {
        "outDir": "../../../dist/main/ts",
        "module": "umd",
        "target": "es6",
        "sourceMap": true,
        "inlineSources": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": false,
        "moduleResolution": "node",
